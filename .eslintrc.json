{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
	"mocha": true
    },
    "extends": ["airbnb-base", "prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
	"no-underscore-dangle": 0,
	"no-shadow": 0,
	"no-param-reassign": 0,
	"no-plusplus": 0,
	"no-console": 0,
	"no-restricted-syntax": 0,
	"no-await-in-loop": 0,
	"func-names": 0
    }
}
